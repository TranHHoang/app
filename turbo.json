{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:prettier": {
      "dependsOn": ["build"]
    }
  }
}
